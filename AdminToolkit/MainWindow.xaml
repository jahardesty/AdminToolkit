<Window x:Class="AdminToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Toolkit" Height="600" Width="1000" Background="#F0F0F0"
        Icon="pack://application:,,,/Assets/toolbox.ico">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,2,10,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="0"
                        CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" 
                                      Margin="{TemplateBinding Padding}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="HomeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground"  Value="#007ACC"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,2,10,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" 
                Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="0"
                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" 
                              Margin="{TemplateBinding Padding}"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#2D2D30">
            <StackPanel>
                <TextBlock Text="SYSADMIN TOOLS" Foreground="#007acc"
                           FontWeight="Bold" Margin="20,30,20,20" FontSize="16"/>
                <Button Content="AD Search" Style="{StaticResource MenuButtonStyle}"
                        Click="NavADSearch_Click" />
                <Button Content="Recycle Bin Purger" Style="{StaticResource MenuButtonStyle}"
                        Click="NavPurger_Click"/>
                <Button Content="Archive Old Users" Style="{StaticResource MenuButtonStyle}"
                        Click="NavArchive_Click" />
                <Button Content="Account Lockout Search" Style="{StaticResource MenuButtonStyle}"
                        Click="NavAccountLockout_Click" />
            </StackPanel>
            <Button Content="Home" Style="{StaticResource HomeButtonStyle}" 
                    VerticalAlignment="Bottom" Margin="40"
                    Click="NavWelcomePage_Click"/> 
            <TextBlock Text="v1.0.0" Foreground="Gray" VerticalAlignment="Bottom"
                       HorizontalAlignment="Center" Margin="10"/>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="10" />
    </Grid>
</Window>
