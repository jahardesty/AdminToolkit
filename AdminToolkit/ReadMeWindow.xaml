<Window x:Class="AdminToolkit.Pages.ReadmeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Toolkit - Knowledge Base" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" Background="#F4F4F4">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quick Start Guide" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Archive User Page" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock TextWrapping="Wrap" Text="• Scan Now: Finds users in AD who haven't logged in for X days.&#x0a;• Find Deleted: Checks if folders exist for users no longer in AD.&#x0a;• Archive: Copies orphaned data to the specified destination."/>

                <TextBlock Text="Safety Features" FontWeight="Bold" Margin="0,20,0,5"/>
                <TextBlock TextWrapping="Wrap" Text="This tool currently operates in 'Copy Only' mode. Original data is not deleted until you uncomment the cleanup lines in the source code."/>

                <TextBlock Text="Exclusions" FontWeight="Bold" Margin="0,20,0,5"/>
                <TextBlock TextWrapping="Wrap" Text="The following folders are automatically ignored: Public, Shared, Administrator, Logs, and Default."/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Close" Width="80" HorizontalAlignment="Right" 
                Margin="0,15,0,0" Click="Close_Click"/>
    </Grid>
</Window>