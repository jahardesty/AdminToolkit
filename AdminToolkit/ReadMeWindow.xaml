<Window x:Class="AdminToolkit.Pages.ReadmeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Toolkit - Help" Height="500" Width="450"
        WindowStartupLocation="CenterScreen" Background="#F4F4F4">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleLabel" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ContentLabel" 
                       TextWrapping="Wrap" 
                       FontSize="14" 
                       LineHeight="22"
                       Foreground="#34495E"/>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Got it" Width="100" Height="30"
                HorizontalAlignment="Right" IsDefault="True"
                Margin="0,15,0,0" Click="Close_Click"/>
    </Grid>
</Window>