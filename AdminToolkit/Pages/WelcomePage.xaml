<Page x:Class="AdminToolkit.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="WelcomePage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to the Admin Toolkit" FontSize="28" FontWeight="Bold" Foreground="#2D2D30" Margin="0,0,0,10"/>
            <TextBlock Text="Select a tool from the sidebar to get started." FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>

            <Border Margin="0,40,0,0" Background="#F0F0F0" Padding="20" CornerRadius="8" BorderBrush="#DCDCDC" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="System Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="lblAdminStatus" Text="Checking Permissions..." Foreground="#007ACC"/>
                </StackPanel>
            </Border>
            <Button x:Name="btnHelp"
                    Content="❓ Help &amp; Readme" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="20"
                    Padding="10,5"
                    Click="OpenReadme_Click"/>
        </StackPanel>
    </Grid>
    
    
</Page>
