<Page x:Class="AdminToolkit.Pages.ArchiveUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminToolkit.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArchiveUserPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Source (Redirected Folders):" FontWeight="Bold"/>
            <TextBox x:Name="txtSourcePath" Margin="0,5,0,15"/>

            <TextBlock Text="Archive Destination:" FontWeight="Bold"/>
            <TextBox x:Name="txtArchivePath" Margin="0,5,0,15"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Users inactive for more than (days): " VerticalAlignment="Center"/>
                <TextBox x:Name="txtDays" Text="365" Width="50" Margin="10,0,0,0" VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="2" Margin="0,0,0,10">
            <Button x:Name="btnScan" Content="Scan for Inactive Users" Click="StartScan_Click" Height="45" Margin="0,0,5,0"/>
            <Button x:Name="btnArchive" Content="Archive Users" Click="StartArchive_Click" Height="45" Margin="5,0,0,0" Background="#007ACC" Foreground="White"/>
        </UniformGrid>

        <TextBox x:Name="txtLog" Grid.Row="2" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="#F3F3F3"/>
    </Grid>
</Page>
