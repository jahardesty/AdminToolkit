<Page x:Class="AdminToolkit.Pages.ArchiveUserPage"
      Background="{StaticResource PageBackgroundBrush}"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ArchiveUserPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="User Data Archiver" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"/>

            <Button Content="?" 
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Background="#FF757575" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Cursor="Hand" 
                    ToolTip="Click for instructions" 
                    Click="Help_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Source (Redirected Folders):" FontWeight="Bold"/>
            <TextBox x:Name="txtSourcePath" Margin="0,5,0,15" VerticalContentAlignment="Center" Padding="3"/>

            <TextBlock Text="Archive Destination:" FontWeight="Bold"/>
            <TextBox x:Name="txtArchivePath" Margin="0,5,0,5" VerticalContentAlignment="Center" Padding="3"/>

            <Button x:Name="btnOpenArchive" 
                    Content="📂 Open Archive Folder" 
                    Width="200" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,15"
                    Click="OpenArchive_Click"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Users inactive for more than (days): " VerticalAlignment="Center"/>
                <TextBox x:Name="txtDays" Text="365" Width="50" Margin="10,0,0,0" VerticalContentAlignment="Center" Padding="3"/>
            </StackPanel>
        </StackPanel>

        <UniformGrid Grid.Row="2" Columns="3" Margin="0,0,0,10">
            <Button x:Name="btnScanDelete" Content="Scan for Deleted Users" Click="FindDeletedUsers_Click" Height="45" Margin="0,0,5,0"/>
            <Button x:Name="btnScan" Content="Scan for Inactive Users" Click="StartScan_Click" Height="45" Margin="0,0,5,0"/>
            <Button x:Name="btnArchive" Content="Archive Users" Click="StartArchive_Click" Height="45" Margin="5,0,0,0" Background="#007ACC" Foreground="White"/>
        </UniformGrid>

        <StackPanel Grid.Row="3" Margin="0,10,0,10">
            <TextBlock x:Name="lblProgressStatus" Text="Ready" Margin="0,0,0,5" Foreground="Gray"/>
            <ProgressBar x:Name="archiveProgressBar" Height="20" Minimum="0" Maximum="100"/>
        </StackPanel>

        <TextBox x:Name="txtLog" Grid.Row="4" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="#F3F3F3" Padding="5"/>
    </Grid>
</Page>