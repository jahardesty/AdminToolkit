<Page x:Class="AdminToolkit.Pages.PurgerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PurgerPage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Redirected Folders Root Path:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBlock Text="Example: D:\Redirect" Foreground="Gray" FontSize="11" Margin="0,0,0,5"/>
            <DockPanel Margin="0,0,0,15">
                <Button Content="Browse" Click="Browse_Click" DockPanel.Dock="Right" Width="75" Margin="5,0,0,0"/>
                <TextBox x:Name="txtRootPath" VerticalContentAlignment="Center"/>
            </DockPanel>
            <Button x:Name="btnScan" Content="Scan Only" Click="StartScan_Click"
                    Height="40" Margin="0,0,5,0" Background="#515151" Foreground="White"/>
            <Button x:Name="btnStart" Content="Purge All Recycle Bins" Click="StartPurge_Click" 
                    Height="40" Background="#D13438" Foreground="White" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                <TextBlock Text="Total Space Recovered: " FontWeight="Bold"/>
                <TextBlock x:Name="lblTotalSaved" Text="0 MB" Foreground="#007ACC" FontWeight="Bold"/>
            </StackPanel>
            <TextBlock Text="Activity Log:" Margin="0,20,0,5" FontWeight="Bold"/>
            <TextBox x:Name="txtLog" Height="200" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                     FontFamily="Consolas" Background="#F3F3F3"/>
        </StackPanel>
    </Grid>
</Page>
