<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="AdminToolkit.Pages.PurgerPage"
      Title="PurgerPage" d:DesignWidth="624.384">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Redirected Folders Root Path:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBlock Text="Example: D:\Redirect" Foreground="Gray" FontSize="11" Margin="0,0,0,5"/>
            <DockPanel Margin="0,0,0,15">
                <Button Content="Browse" Click="Browse_Click" DockPanel.Dock="Right" Width="75" Margin="5,0,0,0"/>
                <TextBox x:Name="txtRootPath" VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnScan" Grid.Column="0" Content="Scan Only" Click="StartScan_Click"
                Height="45" Margin="0,0,5,0" Background="#515151" Foreground="White"/>

            <Button x:Name="btnStart" Grid.Column="1" Content="Purge All Recycle Bins" Click="StartPurge_Click" 
                Height="45" Margin="5,0,0,0" Background="#D13438" Foreground="White" FontWeight="Bold"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,5">
            <TextBlock Text="Total Space Recovered: " FontWeight="Bold"/>
            <TextBlock x:Name="lblTotalSaved" Text="0 MB" Foreground="#007ACC" FontWeight="Bold"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="Activity Log:" Margin="0,10,0,5" FontWeight="Bold"/>

        <TextBox x:Name="txtLog" Grid.Row="4" 
             IsReadOnly="True" 
             VerticalScrollBarVisibility="Auto" 
             HorizontalScrollBarVisibility="Auto"
             FontFamily="Consolas" 
             Background="#F3F3F3"
             Padding="5"/>
    </Grid>
</Page>
