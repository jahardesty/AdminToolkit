<Page x:Class="AdminToolkit.Pages.ADSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AD User Search"
      Background="{StaticResource PageBackgroundBrush}">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Search Active Directory User" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" KeyDown="TxtSearchUser_KeyDown"/>

            <TextBlock Text="Enter SamAccountName (Username):" Margin="0,5,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtSearchUser" Width="300" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                <Button Content="Search" Click="SearchUser_Click" Width="100"/>
            </StackPanel>

            <Separator Margin="0,20,0,20"/>

            <TextBlock Text="Distinguished Name (DN):" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <TextBox x:Name="txtResultDN" IsReadOnly="True" Background="#EEE" Padding="10" TextWrapping="Wrap"/>
            </Grid>

            <Button x:Name="btnCopy" Content="📋 Copy to Clipboard" 
                    HorizontalAlignment="Right" Margin="0,10,0,0" 
                    Width="150" IsEnabled="False" Click="CopyDN_Click"/>
        </StackPanel>
    </Grid>
</Page>
